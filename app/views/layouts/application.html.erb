<!DOCTYPE html>
<html>
<head>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- application stylesheet -->
  <%= stylesheet_link_tag :application, media: :all %>

  <title>VagaBond</title>
</head>
<body>

   <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
         <div class="navbar-brand"><%= link_to "Vagabond", "/" %></div>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <% if current_user %>
          <ul class="nav navbar-nav">
            <li><%= link_to "Cities", user_cities_path(current_user) %></li>
            <li><%= link_to "Profile", user_path(current_user) %></li>
            <li><%= link_to "Log Out", logout_path %></li>
            <li class="active-user">Logged in as: <strong><%= current_user.username %></strong></li>
          </ul>
            <% else %>
            <%= form_for :user, url: "/sessions", method: "post", :html => {:class => "navbar-form navbar-right"} do |f| %>
              <div class="form-group">
                <%= f.text_field :email, placeholder: "Email", class: "form-control" %>
              </div>
              <div class="form-group">
                <%= f.password_field :password, placeholder: "Password", class: "form-control" %>
              </div>
              <div class="form-group">
              <%= f.submit "Sign In", class: "btn btn-success" %>
              </div>
            <% end %>
          <% end %>
        </div><!--/.navbar-collapse -->
      </div>
    </nav>


<%= yield %>

<hr>

<footer>
  <p>&copy; 2016 VAGABOND, Inc.</p>
</footer>
</div> <!-- /container -->



<% flash.each do |name, msg| %>
  <p>
    <small><%= name.capitalize %>: <%= msg %> </small>
  </p>
<% end %>

  <!-- application javascript file -->
<%= javascript_include_tag :application %>
</body>
</html>
