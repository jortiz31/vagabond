<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for current_user, :html => {:class => "form-signin"} do |f| %>
        <h2 class="form-signin-heading">Edit Profile</h2>
        <div class="form-group">
          <%= f.label :username, "Username", class: "sr-only" %>
          <%= f.text_field :username, placeholder: "Username", class: "form-control", :required => true, autofocus: true %>
        </div>
        <div class="form-group">
          <%= f.label :current_city, "Current City", class: "sr-only" %>
          <%= f.text_field :current_city, placeholder: "State, Country", class: "form-control", :required => true, autofocus: true %>
        </div>

        <div class="form-group">
          <%= f.label :email, "Email Address", class: "sr-only" %>
          <%= f.text_field :email, placeholder: "email", class: "form-control", :required => true, autofocus: true %>
        </div>

        <div class="form-group">
          <%= f.label :password, "Password", class: "sr-only" %>
          <%= f.password_field :password, placeholder: "password", class: "form-control", :required => true, autofocus: true %>
        </div>
        <%= f.submit "Save Changes", class: "btn btn-lg btn-primary btn-block" %>
      <% end %>
    </div>
  </div>
</div>
